<!DOCTYPE html>
<html>
  <head>
    <title>Staff Index</title>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <div id="dashBoard">
      <button
        class="mdc-button mdc-button--raised"
        onclick="location.href='/dashboard'"
      >
        <span class="mdc-button__ripple"></span>Dashboard
      </button>
    </div>

    <img src="../images/raffleskidz.jpg" id="brandLogoImage" alt="Image" />

    <div>
      <div class="mdc-data-table">
        <table class="mdc-data-table__table" aria-label="Staff List">
          <thead>
            <tr class="mdc-data-table__header-row">
              <th
                class="mdc-data-table__header-cell"
                role="columnheader"
                scope="col"
              >
                Photo
              </th>
              <th
                class="mdc-data-table__header-cell"
                role="columnheader"
                scope="col"
              >
                Name
              </th>
              <th
                class="mdc-data-table__header-cell"
                role="columnheader"
                scope="col"
              >
                Centre
              </th>
              <th
                class="mdc-data-table__header-cell"
                role="columnheader"
                scope="col"
              >
                Title
              </th>
              <th
                class="mdc-data-table__header-cell mdc-data-table__header-cell--numeric"
                role="columnheader"
                scope="col"
              >
                Year of Joining
              </th>
            </tr>
          </thead>

          <tbody class="mdc-data-table__content">
            <% for(let i = 0; i < employees.length; i++) { %>
            <tr class="mdc-data-table__row">
              <td class="mdc-data-table__cell">
                <div class="employeeProfile">
                  <img
                    src="<%= employees[i].img %>"
                    alt="Image"
                    class="avatar"
                  />
                </div>
              </td>
              <td class="mdc-data-table__cell">
                <a
                  class="linkName"
                  href="/raffleskidz/employees/<%= employees[i].id %>"
                  ><%= employees[i].name %></a
                >
              </td>
              <td class="mdc-data-table__cell">
                <%= employees[i].centre.name %>
              </td>
              <td class="mdc-data-table__cell"><%= employees[i].title %></td>
              <td class="mdc-data-table__cell mdc-data-table__cell--numeric">
                <%= employees[i].joinYear %>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <P></P>
    <button
      class="mdc-button mdc-button--raised"
      onclick="location.href='/raffleskidz/employees/new'"
    >
      <div class="mdc-button__ripple"></div>
      <span class="mdc-button__label">New employee</span>
    </button>
  </body>
</html>
